<script type="text/javascript">
	$(document).ready(function($) {
      $('.new-boat-playground .slider').slick({
        arrows:true, dots: false, infinite:true, speed:500,
        autoplay:true, autoplaySpeed: 5000, slidesToShow:1, slidesToScroll:1, fade:true
      });
      $('.new-boat-playground .slider-nav > div').click(function() {
          $('.new-boat-playground .slider').slick('slickGoTo',$(this).index());
      })
      var userSource = '';
      if(navigator.userAgent.includes('Mobile')) userSource = 'Mobile';
      else if(navigator.userAgent.includes('iPad')) userSource = 'Tablet';
      else userSource = 'Desktop';
      $('.boat-playground').on('click', function(){
        clevertap.event.push("New Launches section clicked", {"userSource": userSource});
      });
  	});
</script>


